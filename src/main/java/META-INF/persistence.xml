<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.project.foodanddrink.models.entities.CategoriesEntity</class>
        <class>com.project.foodanddrink.models.entities.ImagesEntity</class>
        <class>com.project.foodanddrink.models.entities.OrderDetailEntity</class>
        <class>com.project.foodanddrink.models.entities.OrdersEntity</class>
        <class>com.project.foodanddrink.models.entities.ProductsEntity</class>
        <class>com.project.foodanddrink.models.entities.ReviewsEntity</class>
        <class>com.project.foodanddrink.models.entities.ShopEntity</class>
        <class>com.project.foodanddrink.models.entities.SizesOfFoodEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/food_and_drink" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>
</persistence>
